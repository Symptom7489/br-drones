---
import MainLayout from "../layouts/MainLayout.astro";
import { services } from "../data/services";
import { Image } from "astro:assets";
import heroDrone from "../assets/drone-hero.jpg";
---

<MainLayout>
  <section
    class="relative flex min-h-[90vh] items-center overflow-hidden bg-slate-950 pt-20"
  >
    <div
      class="absolute inset-0 z-0 opacity-10"
      style="background-image: radial-gradient(#f97316 0.5px, transparent 0.5px); background-size: 30px 30px;"
    >
    </div>

    <div class="relative z-10 container mx-auto px-6">
      <div class="grid items-center gap-12 lg:grid-cols-2">
        <div class="max-w-3xl">
          <div
            class="mb-6 inline-block rounded-full border border-orange-500/30 bg-orange-500/10 px-3 py-1"
          >
            <span
              class="text-xs font-black tracking-widest text-orange-500 uppercase"
            >
              Louisiana • Mississippi • Gulf Coast
            </span>
          </div>

          <h1
            class="mb-6 text-6xl leading-[0.9] font-black tracking-tighter text-white italic md:text-8xl"
          >
            PRECISION <span class="text-orange-500">DATA</span> FROM ABOVE.
          </h1>

          <p class="mb-10 text-xl leading-relaxed text-slate-400">
            Specializing in{" "}
            <span class="font-bold text-orange-400 text-white">
              Aggregate Production Tracking
            </span>
            , Construction Risk Mitigation, and Forensic-Level 3D Scanning.
          </p>

          <div class="flex flex-wrap gap-4">
            <a
              href="/estimate"
              class="transform rounded-xl bg-orange-500 px-8 py-4 font-black text-black uppercase italic transition-all hover:-translate-y-1 hover:bg-white"
            >
              Get an Estimate
            </a>
            <a
              href="/portfolio"
              class="rounded-xl border border-white/10 px-8 py-4 font-black text-white uppercase italic transition-all hover:bg-white/10"
            >
              View Mission Logs
            </a>
          </div>
        </div>

        <div class="relative hidden lg:block">
          <div
            class="absolute top-1/2 left-1/2 h-80 w-80 -translate-x-1/2 -translate-y-1/2 rounded-full bg-orange-500/20 blur-[100px]"
          >
          </div>

          <a
            href="/portfolio"
            class="relative hidden lg:block group cursor-pointer"
          >
            <div
              class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-orange-500/20 blur-[100px] rounded-full transition-all group-hover:bg-orange-500/40"
            >
            </div>

            <Image
              src={heroDrone}
              alt="Professional Industrial Drone"
              class="relative z-10 w-full h-auto drop-shadow-2xl transform transition-all duration-700 group-hover:scale-105 group-hover:-rotate-2 rounded-[2rem]"
            />

            <div
              class="absolute inset-0 z-20 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500"
            >
              <span
                class="bg-orange-500 text-black font-black py-2 px-4 rounded-full uppercase italic text-xs tracking-widest shadow-xl"
              >
                View Mission Logs
              </span>
            </div>

            <div
              class="absolute bottom-10 right-0 border-r-2 border-orange-500 pr-4 text-right"
            >
              <p
                class="text-[10px] text-orange-500 font-mono uppercase tracking-widest"
              >
                Enterprise Class
              </p>
              <p class="text-white font-black italic">RTK ENABLED</p>
            </div>
          </a>

          <div
            class="absolute right-0 bottom-10 border-r-2 border-orange-500 pr-4 text-right"
          >
            <p
              class="font-mono text-[10px] tracking-widest text-orange-500 uppercase"
            >
              Enterprise Class
            </p>
            <p class="font-black text-white italic">RTK ENABLED</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>;
