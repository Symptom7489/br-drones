---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import { Image } from 'astro:assets';

const projects = await getCollection('portfolio');
---

<MainLayout title="Our Work | Baton Rouge Drones">
  <section class="py-24 px-6 max-w-7xl mx-auto">
    <h1 class="text-5xl font-black mb-16 border-l-8 border-orange-500 pl-6 uppercase">Mission <span class="text-orange-500">Log</span></h1>

    <div class="grid md:grid-cols-2 gap-12">
      {projects.map((project) => (
        <a href={`/portfolio/${project.slug}`} class="group">
          <div class="overflow-hidden rounded-3xl bg-slate-800 border border-white/5 transition-all group-hover:border-orange-500/50">
            <Image 
              src={project.data.thumbnail} 
              alt={project.data.title}
              class="w-full h-80 object-cover opacity-80 group-hover:opacity-100 transition-opacity"
            />
            <div class="p-8">
              <div class="flex justify-between items-start mb-4">
                <span class="text-xs font-bold tracking-widest uppercase text-orange-500 bg-orange-500/10 px-3 py-1 rounded-full">
                  {project.data.industry}
                </span>
                <span class="text-slate-500 text-xs">{project.data.publishDate.toLocaleDateString()}</span>
              </div>
              <h2 class="text-2xl font-bold mb-4">{project.data.title}</h2>
              <div class="flex flex-wrap gap-2">
                {project.data.deliverables.map(item => (
                  <span class="text-[10px] uppercase border border-white/10 px-2 py-1 rounded text-slate-400">
                    {item}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
</MainLayout>