---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import ProjectCard from "../../components/ProjectCard.astro";

// Fetch all missions and sort by date (newest first)
const allMissions = (await getCollection("portfolio")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);

// Get unique industries for the filter bar
const industries = [...new Set(allMissions.map((m) => m.data.industry))];
---

<MainLayout title="Operations Log | Mission Archive">
  <section class="bg-slate-950 pt-32 pb-24 min-h-screen">
    <div class="container mx-auto px-6">
      <div class="mb-16">
        <h3
          class="text-orange-500 font-bold uppercase tracking-[0.3em] text-xs mb-4"
        >
          Historical Data
        </h3>
        <h1
          class="text-6xl font-black text-white italic uppercase tracking-tighter"
        >
          Operations <span class="text-orange-500">Log</span>
        </h1>
        <p class="text-slate-400 mt-4 max-w-2xl">
          An archive of completed missions, volumetric audits, and forensic
          scanning operations across the Gulf Coast.
        </p>
      </div>

      <div class="flex flex-wrap gap-4 mb-12">
        <button
          class="px-6 py-2 rounded-full bg-orange-500 text-black font-bold text-xs uppercase italic"
          >All Missions</button
        >
        {
          industries.map((industry) => (
            <button class="px-6 py-2 rounded-full bg-slate-900 border border-white/10 text-slate-400 font-bold text-xs uppercase italic hover:border-orange-500/50 hover:text-white transition-all">
              {industry}
            </button>
          ))
        }
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {allMissions.map((project) => <ProjectCard project={project} />)}
      </div>
    </div>
  </section>
</MainLayout>
